\begin{assumption}\label{as:OSLC}
	The following assumption will be needed throughout the paper.
	\begin{enumerate}[({A}-1)]
		\item
		There is a function $a_1:\R \to \R$ of class $C^1(\R)$ and a constant $a_2$ such that
			$$
			f(x) =a_1(x)x  + a_2
			$$
		\item
			The functions $f,g$ are of class $C^{1}(\R)$.
		\item
			\textbf{Local Lipschitz condition}. For each integer $m$ there is a positive constant $L(m)$
			such that 
			$$
				|f(x)-f(y)|\vee|g(x)-g(y)|^2 
				\leq L|x-y|^2 \qquad \forall x,y \in \mathbb{R}, \qquad |x|\vee|y|\leq m.
			$$ 
		\item
			\textbf{Monotone condition.} There exist positive constants $\alpha$, $\beta$ such that
			\begin{equation}\label{eqn:MonotoneCondition}
				\innerprod{x}{f(x)} +\frac{1}{2}|g(x)|^2
				\leq \alpha +\beta |x|^2, \qquad \forall x \in \R
			\end{equation}
	\end{enumerate}
\end{assumption}
\begin{lem}\label{lem:a1Bound}
	Suppose \Cref{as:OSLC}. Then, there is a positive constant $L_a$ such that
	\begin{equation}
		a_1(x)< L_a, \qquad \forall x \in \R.
	\end{equation}
\end{lem}
\begin{Proof}
	We will divide the proof in two cases.
	First suppose $|x|>1$. Then from the monotone condition \eqref{eqn:MonotoneCondition}
	there is a positive constant $K\geq\max\{\alpha, \beta\}$ such that
	\begin{align*}
		\innerprod{x}{xa_1(x)}\leq K
		\left(
			1+|x|^2
		\right).
	\end{align*}
	Thus, we can deduce that 
	$$
		a_1(x)\leq 
			\left(
			1+ \frac{1}{|x|^2}
		\right)
		\leq 2K.
	$$
	, suppose that $0\leq|x|\leq 1$. In this case, by the continuity of $a_1$ and since $[-1,1]$ is a 
	compact set, we see that there is  $x^\star \in [-1,1]$ such that
	$$
		a_1(x)\leq a_1(x^\star), \qquad \forall x\in[-1,1].
	$$
	Hence, taking $L_a:=\max\{2K,a_1(x^\star))\}$ the upper bound is proved. \qed
\end{Proof}